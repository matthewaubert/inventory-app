<%- include('./partials/header') %>
<h2><%= title %></h2>
<!-- prettier-ignore -->
<%- include('./partials/create-button', { type: 'category' }) %>
<% if (categoryList.length) { %>
<ul class="mt-2 flex flex-col gap-2">
  <% for (const category of categoryList) { %>
  <li>
    <h4>
      <a href="<%= category.url %>" class="text-blue-500 hover:text-blue-600">
        <%= decode(category.name) %>
      </a>
    </h4>
    <div>Types of items: <%= itemCountByCategory[category._id] || 0 %></div>
  </li>
  <% } %>
</ul>
<% } else { %>
<p>There are no categories.</p>
<% } %> <%- include('./partials/footer') %>
