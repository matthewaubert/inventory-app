<%- include('./partials/header') %>
<h2><%= title %></h2>
<!-- prettier-ignore -->
<%- include('./partials/create-button', { type: 'item' }) %>

<% if (itemList.length) { %>
<ul class="mt-2 flex flex-col gap-4">
  <% for (const item of itemList) { %>
  <li class="grid gap-4 grid-cols-[min(33%,_144px)_1fr] md:grid-cols-[min(25%,_144px)_1fr]">
    <img
      src="<%= item.imgId ? item.imgUrl : 'https://placehold.co/240x160?font=roboto&text=No+image' %>"
      alt=""
      class="max-h-[144px] justify-self-center"
    />
    <div>
      <h4 class="leading-snug font-bold">
        <a href="<%= item.url %>" class="text-blue-500 hover:text-blue-600">
          <%= decode(item.name) %>
        </a>
      </h4>
      <div>
        <strong>Category:</strong>
        <a
          href="<%= item.category.url %>"
          class="text-blue-500 hover:text-blue-600"
        >
          <%= decode(item.category.name) %>
        </a>
      </div>
      <div><strong>Price:</strong> <%= formatPrice(item.price) %></div>
      <div><strong>In stock:</strong> <%= item.quantity %></div>
    </div>
  </li>
  <% } %>
</ul>
<% } else { %>
<p>There are no items.</p>
<% } %> <%- include('./partials/footer') %>
