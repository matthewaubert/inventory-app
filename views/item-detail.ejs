<%- include('./partials/header') %>
  <h2 class="text-2xl mb-2">
    <%= title %>
  </h2>
  <p class="text-lg mb-2">
    <strong>Category:</strong>
    <a href="<%= item.category.url %>" class="text-blue-500 hover:text-blue-600">
      <%= item.category.name %>
    </a>
  </p>
  <p class="text-lg mb-2">
    <strong>Price:</strong>
    <%= formatPrice(item.price) %>
  </p>
  <p class="text-lg mb-2"><strong>In stock:</strong>
    <%= item.quantity %>
  </p>
  <h3 class="text-lg font-bold">Description</h3>
  <p>
    <%= item.description %>
  </p>
  <%- include('./partials/footer') %>